<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101114"
    tools:context=".MainActivity">

    <!-- Display -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Teclado 4x5 -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:rowCount="5"
        android:columnCount="4"
        app:layout_constraintTop_toBottomOf="@id/tvDisplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Linha 1: C  ⌫  %  ÷ -->
        <Button android:id="@+id/btnClear" style="@style/CalcKey" android:text="C" />
        <Button android:id="@+id/btnBack"  style="@style/CalcKey" android:text="⌫" />
        <Button android:id="@+id/btnPercent" style="@style/CalcKey" android:text="%" />
        <Button android:id="@+id/btnDiv" style="@style/CalcKeyOp" android:text="÷" />

        <!-- Linha 2: 7 8 9 × -->
        <Button android:id="@+id/btn7" style="@style/CalcKey" android:text="7" />
        <Button android:id="@+id/btn8" style="@style/CalcKey" android:text="8" />
        <Button android:id="@+id/btn9" style="@style/CalcKey" android:text="9" />
        <Button android:id="@+id/btnMul" style="@style/CalcKeyOp" android:text="×" />

        <!-- Linha 3: 4 5 6 − -->
        <Button android:id="@+id/btn4" style="@style/CalcKey" android:text="4" />
        <Button android:id="@+id/btn5" style="@style/CalcKey" android:text="5" />
        <Button android:id="@+id/btn6" style="@style/CalcKey" android:text="6" />
        <Button android:id="@+id/btnSub" style="@style/CalcKeyOp" android:text="−" />

        <!-- Linha 4: 1 2 3 + -->
        <Button android:id="@+id/btn1" style="@style/CalcKey" android:text="1" />
        <Button android:id="@+id/btn2" style="@style/CalcKey" android:text="2" />
        <Button android:id="@+id/btn3" style="@style/CalcKey" android:text="3" />
        <Button android:id="@+id/btnAdd" style="@style/CalcKeyOp" android:text="+" />

        <!-- Linha 5: ± 0 . = -->
        <Button android:id="@+id/btnSign" style="@style/CalcKey" android:text="±" />
        <Button android:id="@+id/btn0" style="@style/CalcKey" android:text="0" />
        <Button android:id="@+id/btnDot" style="@style/CalcKey" android:text="." />
        <Button android:id="@+id/btnEq" style="@style/CalcKeyEq" android:text="=" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>