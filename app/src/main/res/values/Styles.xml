<resources>
    <style name="CalcKey" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">20sp</item>

        <item name="android:layout_margin">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">#FFEB3B</item> <!-- Fundo amarelo -->
        <item name="android:textColor">#000000</item> <!-- Texto preto -->
    </style>

    <style name="CalcKeyOp" parent="CalcKey">
        <item name="android:background">#FFC107</item> <!-- Laranja -->
    </style>

    <style name="CalcKeyEq" parent="CalcKey">
        <item name="android:background">#4CAF50</item> <!-- Verde -->
        <item name="android:textStyle">bold</item>
    </style>
</resources>